{
  "manifest_version": 3,
  "name": "Easy Redirect",
  "version": "1.0",
  "description": "Redirect blocked websites to a specific page",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Easy Redirect"
  }
}